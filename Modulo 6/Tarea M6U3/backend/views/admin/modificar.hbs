<div class="container" style="margin: 50px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar Novedad</h4>
            <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" name="id" value="{{novedad.id}}">
                <div class="form-group">
                    <h6>• Titulo</h6>
                    <input type="text" name="titulo" placeholder="Titulo" class="form-control" value="{{novedad.titulo}}">
                </div>
                <div class="form-group">
                    <h6>• Subtitulo</h6>
                    <textarea name="subtitulo" class="form-control" placeholder="Subtitulo" >{{novedad.subtitulo}}</textarea>
                </div>
                <div class="form-group">
                    <h6>• Cuerpo</h6>
                    <textarea name="cuerpo" placeholder="Cuerpo" class="form-control">{{novedad.cuerpo}}</textarea>
                </div>
                <div class="form-group">
                    <input type="file" name="imagen" id="imagen"/>
                   <p><label><input type="checkbox" name="img_eliminar" id="img-eliminar" value="1"> Eliminar imagen actual?</label>
                   <input type="hidden" name="img_original" value="{{novedad.img_id}}"></p>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
                <p class="error">{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>