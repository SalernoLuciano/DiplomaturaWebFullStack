<h1>{{title}}</h1>
{{#if conocido}}
    <p>Hola {{nombre}} <a href="/salir">Salir</a></p>
{{/if}}

{{#unless conocido}}
    <p>Usuario sin logear</p>
    <form action="/ingresar" method="post">
        <input type="text" name="nombre" placeholder="Ingrese su nombre...">
        <button>Ingresar</button>
    </form>
{{/unless}}